@model IEnumerable<LapTrinhWeb.Models.Product>
@{
    ViewData["Title"] = "Danh sách sản phẩm";
}
<div class="container mt-4">
    <h2>Danh sách sản phẩm</h2>
    <a asp-action="Create" class="btn btn-success mb-3">Thêm sản phẩm</a>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tên sản phẩm</th>
                <th>Ảnh</th>
                <th>Giá</th>
                <th>Giá khuyến mãi</th>
                <th>Danh mục</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Image))
                    {
                        <img src="~/products/@item.Image" width="60" />
                    }
                </td>
                <td>@item.Price</td>
                <td>@item.SalePrice</td>
                <td>@item.CategoryId</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>