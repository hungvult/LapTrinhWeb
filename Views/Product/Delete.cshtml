@model LapTrinhWeb.Models.Product
@{
    ViewData["Title"] = "Xóa sản phẩm";
    var categories = ViewBag.Categories as List<LapTrinhWeb.Models.Category>;
}
<div class="container mt-4">
    <h2>Xóa sản phẩm</h2>
    <h4>Bạn có chắc chắn muốn xóa sản phẩm này?</h4>
    <dl class="row">
        <dt class="col-sm-3">Tên sản phẩm</dt>
        <dd class="col-sm-9">@Model.Name</dd>
        <dt class="col-sm-3">Ảnh</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrEmpty(Model.Image))
            {
                <img src="~/products/@Model.Image" width="120" />
            }
        </dd>
        <dt class="col-sm-3">Giá</dt>
        <dd class="col-sm-9">@Model.Price</dd>
        <dt class="col-sm-3">Giá khuyến mãi</dt>
        <dd class="col-sm-9">@Model.SalePrice</dd>
        <dt class="col-sm-3">Danh mục</dt>
        <dd class="col-sm-9">@categories?.FirstOrDefault(c => c.Id == Model.CategoryId)?.Name</dd>
        <dt class="col-sm-3">Mô tả</dt>
        <dd class="col-sm-9">@Model.Description</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
    </form>
</div>